generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  name String
  username String @unique
  password String
  email String @unique
  role Role 
  admin Admin?
  gender String 
  phoneNumber String
  address String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id     Int    @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
  nip String
  nuptk String
}

enum Role {
  admin
  teacher
  student
}
